<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/playlist_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_default_song_image"
            android:background="@color/ic_launcher_background"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playlist_item_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/playlist_item_image"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playlist_item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/playlist_item_image"
            android:layout_below="@id/playlist_item_song"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playlist_item_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/playlist_item_artist"/>


</RelativeLayout>